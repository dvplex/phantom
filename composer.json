{
    "name": "dvplex/phantom",
    "type": "library",
    "description": "DVPLEX Phantom",
    "keywords": [
        "dvplex",
        "Phantom"
    ],
    "homepage": "https://github.com/dvplex/phantom",
    "license": "MIT",
    "authors": [
        {
            "name": "Georgi Balbuzanov",
            "email": "georgi@balbuzanov.com",
            "homepage": "https://www.dvplex.com",
            "role": "Developer"
        }
    ],
    "require": {
		"nwidart/laravel-modules": "^3.0",
		"spatie/laravel-menu": "^3.1",
		"spatie/laravel-permission": "^2.9",
        "illuminate/support": "^6.0",
        "php" : "~7.2|~7.1"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "dvplex\\Phantom\\": "src"
        },
        "files": ["src/functions.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "dvplex\\Phantom\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "laravel": {
            "providers": [
                "dvplex\\Phantom\\PhantomServiceProvider"
            ],
            "aliases": {
                "Phantom" : "dvplex\\Phantom\\Classes\\Phantom"
            }
        },
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
